<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".dashboard_activiy"
    android:id="@+id/rootView">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="163dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="@string/ازمایشگاه"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864"
        tools:ignore="UnknownId" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="356dp"
        android:layout_height="434dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:background="@color/cardview_light_background"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.727"
        tools:ignore="MissingConstraints">

        <!--row1-->
        <!--column1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="174dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/testblood"
                    android:layout_width="wrap_content"
                    android:layout_height="143dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/testblood" />

                <TextView
                    android:id="@+id/ttestblood"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_horizontal"
                    android:text="@string/TestBlood"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <!--column2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="171dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/donateblood"
                    android:layout_width="wrap_content"
                    android:layout_height="133dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/bloodd" />

                <TextView
                    android:id="@+id/txtdonateblood"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_horizontal"
                    android:text="@string/DonateBlood"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <!--row1-->
        <!--column1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="178dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="139dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/video" />

                <TextView
                    android:id="@+id/ttutorialvideo"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:gravity="center_horizontal"
                    android:text="@string/TutorialVideo"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <!--column2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView3"
            android:layout_width="12dp"
            android:layout_height="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="169dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/myprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="139dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/picon" />

                <TextView
                    android:id="@+id/txtmyprofle"
                    android:layout_width="114dp"
                    android:layout_height="23dp"
                    android:gravity="center_horizontal"
                    android:text="@string/MyProfile"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>